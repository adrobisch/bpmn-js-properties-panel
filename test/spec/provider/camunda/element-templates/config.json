{
  "label": "MailTask",
  "id": "my.mail.Task",
  "appliesTo": [
    "bpmn:ServiceTask"
  ],
  "properties": [
    {
      "label": "Empfänger",
      "type": "String",
      "binding": {
        "type": "camunda:inputParameter",
        "target": "recipient"
      }
    },
    {
      "label": "Template",
      "type": "Text",
      "description": "Übrigens, hier kannst du freemarke templates ${...} benutzen",
      "value": "Hello ${firstName}!",
      "binding": {
        "type": "camunda:inputParameter",
        "target": "messageBody",
        "scriptFormat": "freemarker"
      }
    },
    {
      "label": "Ergebnisvariable",
      "type": "Text",
      "value": "mailResult",
      "binding": {
        "type": "camunda:outputParameter",
        "source": "${mailResult}",
        "scriptFormat": "freemarker"
      },
      "constraints": {
        "not-empty": true
      }
    }
  ]
},

